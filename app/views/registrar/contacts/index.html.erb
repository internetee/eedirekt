<div class='my-3 container mx-auto'>

  <%= link_to t('.back'), root_path, class: 'text-indigo-500' %>

  <div class="h-8"></div>

  <% @contacts.each do |contact| %>
    <div class='flex justify-between items-center border border-b py-2 px-2'>
      <div>
        <h3><%= contact.name %></h3>
        <p><%= contact.ident %></p>
      </div>
      <div class='flex space-x-2'>
        <%= link_to t('.edit'), edit_registrar_contact_path(uuid: contact.uuid), class: 'px-3 py-1 rounded-md text-white bg-indigo-400 hover:bg-indigo-500 cursor-pointer' %>
        <%= button_to t('.delete'), registrar_contact_path(uuid: contact.uuid), id: 'destroy-card', method: :delete, class: "px-3 py-1 rounded-md text-white bg-red-400 hover:bg-red-500 cursor-pointer", form: { data: { turbo_confirm: t(".confirm_delete") } } %>
      </div>
    </div>
  <% end %>

  <div class="flex justify-center">
    <% if @pagy.pages > 1 %>
      <div class="footer flex text-center mt-4">
        <%== pagy_nav(@pagy)%>
      </div>
    <% end %>
  </div>
</div>
