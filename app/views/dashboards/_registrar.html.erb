<div>

  <section class="bg-white">
    <div class="mx-auto max-w-screen-xl px-4 py-12 sm:px-6 md:py-16 lg:px-8">
      <div class="mt-8 sm:mt-12">
        <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
          <div class="flex flex-col rounded-lg bg-blue-100 px-4 py-8 text-center">
            <dt class="order-last text-lg font-medium text-gray-500">
              <%= t('.balance') %>
            </dt>

            <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
              <%= link_to registrar_invoices_path do %>
                <% if @balance.present? %>
                  <%= @balance[:amount] %> <%= @balance[:currency] %>
                <% else %>
                  <%= t('.connection_error') %>
                <% end %>
              <% end %>
            </dd>
          </div>

          <div class="flex flex-col rounded-lg bg-blue-100 px-4 py-8 text-center">
            <dt class="order-last text-lg font-medium text-gray-500">
              <%= t('.domains') %>
            </dt>

            <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
              <%= link_to registrar_domains_path do %>
                <%= @registry_domains_count %>

                <% unless @registry_domains_count == @domains_count %>
                  <div>
                  <span class='text-red-500 text-sm'><%= @domains_count %> in database. Need to synchronize!</span>
                  </div>
                <% end %>
              <% end %>
            </dd>
          </div>

          <div class="flex flex-col rounded-lg bg-blue-100 px-4 py-8 text-center">
            <dt class="order-last text-lg font-medium text-gray-500">
              <%= t('.contacts') %>
            </dt>

            <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
              <%= link_to @contacts_count, registrar_contacts_path %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </section>


  <%= render 'dashboards/notifications' %>

</div>
