<h1 class='text-3xl font-bold text-center'><%= t('.title') %></h1>

<div class='container mx-auto' data-controller='notifications'>
  <p><%= current_user.inspect %></p>

  <%= button_to t('.logout'), logout_path,
                method: :delete, class: "text-black rounded-md px-6 py-2 border border-grey-400 hover:text-white hover:bg-red-500 border border-black"  %>

  <% if admin? %>
    You are admin
    <%= render 'dashboards/admin' %>
  <% elsif registrar? %>
    You are registrar
    <%= render 'dashboards/registrar' %>
    <% elsif registrant?  %>
  <% end %>
  
</div>
